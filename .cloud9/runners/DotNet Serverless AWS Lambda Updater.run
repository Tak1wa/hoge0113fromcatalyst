{
  "script": [
    "for directory in /projects/* ; do",
    "  if [ -d \"$directory/.cloud9/runners\" ]; then",
    "    REPOSITORY_DIR=$directory",
    "  fi",
    "done",
    "cd $REPOSITORY_DIR",
    "dotnet tool update -g Amazon.Lambda.Tools"
  ],
  "info" : "This runner will update Amazon Lambda Tools with latest version."
}